<section id="edit-container">
    <div class="edit-container-info">
        <!-- Do not forget to change the path to the image -->
        <img src="/style/img/blog-img12.jpg" alt="image">

        <form action="/edit/{{data._id}}" method="post" class="container-text">
            <h2>Edit</h2>
            <p>Edit your masterpiece!</p>

            <label for="title">Title:</label>
            <input type="text" id="title" name="name" value="{{data.name}}">

            <label for="painting-tech">Painting technique:</label>
            <input type="text" id="painting-tech" name="technique" value="{{data.technique}}">

            <label for="picture">Art picture:</label>
            <input type="text" id="picture" name="picture" value="{{data.picture}}">

            <label for="certificate">Certificate of authenticity:</label>
            <input type="text" id="certificate" name="certificate" value="{{data.certificate}}">

            <button class="edit-btn">Edit</button>
        </form>

    </div>
</section>